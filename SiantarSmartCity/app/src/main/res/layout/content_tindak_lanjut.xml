<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_tindak_lanjut"
    tools:context="com.yohanes.siantarsmartcity.activity.TindakLanjutActivity"
    android:orientation="vertical"
    android:weightSum="1"
    >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_weight="0.56">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Judul Pengaduan"
            android:id="@+id/judulPengaduan"
            android:textColor="@color/common_signin_btn_dark_text_default"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical|center_horizontal"
            android:background="@color/colorPrimary"
            android:textStyle="bold"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:background="@color/colorPrimary">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Created by: "
                android:id="@+id/createdBy"
                android:layout_weight="1"
                android:gravity="left"
                android:textSize="12dp"
                android:textColor="#ffffff"/>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Created at: "
                android:id="@+id/createdAt"
                android:layout_weight="1"
                android:gravity="right"
                android:textSize="12dp"
                android:textColor="#ffffff"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:background="@color/colorPrimary">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="alamatPengaduan"
                android:id="@+id/alamatPengaduan"
                android:layout_weight="1"
                android:gravity="left"
                android:textSize="12dp"
                android:textColor="#ffffff"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:id="@+id/imageDesc"
                android:layout_marginTop="0dp"
                android:scaleType="centerCrop"
                android:layout_gravity="center_horizontal"
                />

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Tindak Lanjut Pengaduan"
        android:id="@+id/textView12"
        android:background="@color/colorPrimary"
        android:textColor="#ffffff"
        android:paddingLeft="10dp"
        android:paddingTop="3dp"
        android:paddingRight="3dp"
        android:paddingBottom="3dp"
        android:textSize="12dp"/>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:id="@+id/listTindakLanjut"
        android:layout_gravity="top"
        android:layout_weight="0.44"/>

</LinearLayout>
